{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Main Process",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/src",
      "runtimeExecutable": "${workspaceFolder}/src/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/src/node_modules/.bin/electron.cmd"
      },
      "args": [
        "."
      ],
      "outputCapture": "std"
    },
    {
      "name": "Debug Renderer Process",
      "type": "chrome",
      "request": "launch",
      "runtimeExecutable": "${workspaceRoot}/src/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/src/node_modules/.bin/electron.cmd"
      },
      "runtimeArgs": [
        "${workspaceRoot}/src/electronMain.js",
        "--remote-debugging-port=9222"
      ],
      "webRoot": "${workspaceRoot}/src"
    }
  ]
}